.userbox
  .inner
    .avatarname{:'original-title'=>'去个人主页'}
      -link_to pin_url_for('pin-user-auth') do
        =logo current_user,:tiny
      =link_to "#{current_user.name}",pin_url_for('pin-user-auth'),:class=>'name'
    .hide=link_to "公共区",'/',:'original-title'=>'看看大家都在做什么'
    .sp.hide=link_to "随手夹",'javascript:;',:'original-title'=>'帮助您快速引用资源，<span class="loud">正在开发中..</span>'
    .sp.hide=link_to "收件箱",'javascript:;',:'original-title'=>'处理站内消息，<span class="loud">正在开发中..</span>'
    .sp=link_to "用户设置",pin_url_for('user_auth','/account'),:'original-title'=>'设置头像，昵称'
    .sp=link_to "退出",pin_url_for('user_auth','/logout'),:'original-title'=>'点这里退出登录'

.topbar
  %ul
    %li=link_to '思维导图',pin_url_for("pin-mindmap-editor")
