%div{:style=>"padding:24px;border:1px solid black;"}
  %div=link_to course_item.course.name,"/course_items/#{course_item.id}",:target=>"_blank"
  %div=course_item.teacher.name
  -if current_user.course_item_is_select?(course_item)
    %div 已选择
    %div=link_to "取消选择","/course_items/#{course_item.id}/cancel_select?week_day=#{params[:week_day]}&order_num=#{params[:order_num]}",:method=>:delete
  -else
    %div=link_to "选择","/course_items/#{course_item.id}/select?week_day=#{params[:week_day]}&order_num=#{params[:order_num]}",:method=>:post