.clearfix
  .member-logo
    =avatar member.email,:tiny
  .member-email
    %span{:class=>member.kind == 'owner'?'loud':''}
      =member.email
      =member.username.blank? ? '':"(#{member.username})"
  .delete
    -if member.email != current_user.email
      =link_to_remote '删除',:url=>"/organizations/#{@organization.id}/members/#{member.id}",:method=>'DELETE'