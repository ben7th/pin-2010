-#use 用户基本信息设置
-#see 用户设置->基本信息

-htitle "基本信息设置"

.mside.grid_5
  =render 'account/parts/account_links'

.main.grid_19.ll
  .page-title-bar
    .meta
      %h2 你可以在这里设置你平常使用的用户昵称以及签名档

  .paddingl20
    = flash_info
    .page-account-base-form.aj-submit-form
      - form_for current_user,:url=>"/account",:html=>{:method=>:put} do |f|
        .field
          %label 用户名
          = text_field_tag :name,current_user.name,:class=>'text'
        .field
          %label 签名档
          = text_area_tag :sign,current_user.sign,:class=>'text',:style=>'width:200px;'
        .field
          %label 旧密码
          = password_field_tag :old_password,'',:class=>'text'
        .field
          %label 新密码
          = password_field_tag :new_password,'',:class=>'text'
        .field
          %label 确认新密码
          = password_field_tag :new_password_confirmation,'',:class=>'text'
        .field
          = link_to '保存更改','javascript:;',:class=>'account-submit a-link-submit'
