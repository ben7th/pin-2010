-#use 关键词的基本信息
-#see 关键词页

.base-info
  .tag-page-logo
    =logo tag,:medium
    -if logged_in?
      .upload=link_to '上传图片',"/tags/#{tag.full_name}/upload_logo"

  .tag-main{:'data-name'=>tag.full_name}
    -if tag.namespace.blank?
      .name>=tag.name
    -else
      .name>="<span class='darkbg'>#{tag.namespace}</span> #{tag.name}"

    .detail-data
      .data
        =ct h(tag.detail)
      -if logged_in?
        .edit-detail
          -link_to 'javascript:;',:class=>'edit csshov' do
            .icon
            %span 编辑关键词详细描述

    .tag-detail-edit-form{:style=>'display:none'}
      -value = tag.detail
      =text_area_tag :'detail-inputer',value,:class=>'detail-inputer text'
      .btns
        %a.button.editable-submit{:href=>'javascript:;'} 发送
        %a.button.editable-cancel{:href=>'javascript:;'} 取消


    .footmisc
      -if !tag.tag_detail_revisions.blank?
        .last-edited-user
          -user = tag.last_editor
          .time.quiet
            #{usersign user,false} 编辑于 #{jtime tag.updated_at}
            -link_to "/tags/#{tag.full_name}/revisions" do
              查看历史