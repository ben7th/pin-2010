-#use collection列表页
-#see 顶部导航栏 collections

-user = @user || current_user
-weibo = user.tsina_weibo

-if user == current_user
  -tsina_feeds = weibo.home_timeline
-else
  -tsina_feeds = weibo.user_timeline

-htitle "#{user.name}的新浪微博"

.main.grid_24.no-line
  .page-collection-top
    .meta
      %h2 新浪微博
      .ops
        %a.create{:href=>"javascript:;"} <span class='icon'></span><span>发微博</span>
        %a.minibutton.edit{:href=>"javascript:;"} <span>修改</span>

  .page-ogrid.collection-feeds
    -tsina_feeds.each do |tsina_feed|
      -id = tsina_feed.id
      -photo_url = tsina_feed.bmiddle_pic
      -reposted_feed = tsina_feed.retweeted_status

      .feed.tsina{:'data-tsina-feed-id'=>id,:'data-col-count'=>2}

        -if !photo_url.blank?
          .photo
            .box{:style=>'height:278px;overflow:hidden;'}
              %img{:src=>photo_url,:style=>"display:block;width:450px;"}

        .detail=tsina_feed.text

        .clearfix

        -if !reposted_feed.blank?
          .reposted
            =reposted_feed.text
          

        .creator
          -creator = tsina_feed.user
          .avatar
            %img{:src=>creator.profile_image_url}
          .name
            =link_to creator.name,"http://weibo.com/#{creator.id}",:target=>'_blank'
            发布在
            =link_to '新浪微博','http://www.weibo.com'

            

