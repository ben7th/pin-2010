-  'views/users',true

-content_for :title do
  我关注的人

-content_for :javascripts do
  = javascript_include_tag "views/follows"
  = javascript_include_tag "views/follows_channel"

  = javascript_include_tag 'views/member_auto_complete_load'
  :javascript
    pie.load(function(){
      var cac = new pie.ContactAutoComplete('#contact_email');
      jQuery('.add-member-form .inline-button').bind('click',function(){
        cac.add_member_submit();
      });
    });

.grid_18.alpha
  .grid-title
    我关注的人，共#{@followings.count}人

  .add-member-form.form.darkbg
    .tip 输入邮箱或用户名，添加关注对象
    = text_field_tag 'contact[email]',"",:size=>25,:maxlength=>255,:class=>'marginr5 inline text'
    = submit_tag "添加",:class=>'inline-button'
    .add-member-info

  =render :partial=>"contacts/manage/mplist_followings_users",:locals=>{:users=>@followings}

  .padding5
    = will_paginate @followings

.grid_5.omega.fright
  =show_sub_menu

