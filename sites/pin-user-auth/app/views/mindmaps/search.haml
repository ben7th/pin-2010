- require_css 'views/users'

.grid_18.alpha
  .grid-title
    关于
    %span.loud>#{@query}
    ，找到 #{@result.total_count} 条结果

  .hrr
  .searched-mindmaps.padding5
    -@result.items.each do |item|
      -mindmap = item.mindmap
      -unless mindmap.blank?
        .search-result
          .meta.darkbg
            .avatar
              =avatar mindmap.user,:tiny
            .c
              -if mindmap && !mindmap.private?
                .title
                  -if mindmap.user.blank?
                    ='[已删除用户]'
                  -else
                    =link_to mindmap.user.name,pin_url_for('pin-user-auth',"users/#{mindmap.user.id}")
                  的
                  =link_to item.title,pin_url_for('pin-mev6',"mindmaps/#{mindmap.id}")
                .data
                  =item.content
              -else
                .data
                导图内容不公开，无法显示
          .score.lightbg
            搜索相关度
            %span.loud=item.score
          .time.lightbg
            导图编辑时间
            =jtime(mindmap.updated_at)

  =will_paginate @result

.grid_5.fright.omega
  .padding5
    =minibutton '返回导图首页',pin_url_for('user_auth','mindmaps')