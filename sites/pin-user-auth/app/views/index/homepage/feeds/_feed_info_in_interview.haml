-klass = feed.send_by_main_user?(channel) ? 'notice':'question'

.f.ext.interview{:'data-id'=>"#{feed.id}",:class=>[klass,'btb']*' '}
  =render :partial=>'index/homepage/feeds/info_parts/info_reply_to_feed',:locals=>{:feed=>feed}
  =render :partial=>'index/homepage/feeds/info_parts/info_current_feed',:locals=>{:feed=>feed}
  =render :partial=>'index/homepage/feeds/info_parts/info_quote_feed',:locals=>{:feed=>feed}

  .extitem
    -answer_comments = feed.reply_comments_of(channel.include_users_and_creator)
    .answers{:class=>answer_comments.blank? ? 'hide':''}
      -answer_comments.each do |c|
        .answer.darkbg.shadow
          .icon
          .avatar
            =avatar(c.user,:mini)
          .content
            =link_to c.user.name,c.user
            %span.loud è¯´
            =c.content

  =render :partial=>'index/homepage/feeds/info_parts/info_time_and_ops',:locals=>{:feed=>feed}
    
  
