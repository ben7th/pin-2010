-eu = feed.creator

.f.ext.blog{:'data-id'=>"#{feed.id}",:class=>'btb'}
  .blog-head
    .title.loud
      =link_to feed.content,'javascript:;'
    .meta
      .avatar
        =avatar eu,:mini
      .name
        =link_to eu.name,eu
      .posted-at
        =jtime feed.created_at

  -html = feed.html
  -if !html.blank?
    .blog-html
      =html
  =render :partial=>'index/homepage/feeds/info_parts/info_time_and_ops',:locals=>{:feed=>feed}