-ea = EmailActor.new(feed.email)
.f.darkbg{:'data-id'=>"#{feed.id}"}
  .avatar
    =avatar ea.email,:mini
  .c
    .data
      =link_to ea.name,ea.actor
      =feed_content(feed)
.time.lightbg1
  =created_from(feed)
.ops
  -if feed.email == current_user.email
    .del.darkbg1.csshov
      .icon
      .t 删除
  .fav.darkbg1.csshov{:class=>feed.fav_by?(current_user) ? 'on':'off'}
    .icon
    .t.t1 标记
    .t.t2 取消标记
  .transmit.darkbg1.csshov.hide
    .icon
    .t 传阅
  .echo.darkbg1.csshov{:'data-count'=>feed.comments_count}
    .icon
    .t 回应 #{feed.comments_count}
