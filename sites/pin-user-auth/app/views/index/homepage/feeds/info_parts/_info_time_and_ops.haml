.footmisc
  .time.lightbg
    =link_to created_from(feed),feed,:class=>'quiet'

  .split.quiet •
  .viewpoints.quiet
    =viewpoint_link(feed)

  .split.quiet •
  .view-detail
    =link_to '查看详情',feed

  -if logged_in?
    .ops
      .split.quiet •
      %a.fav{:href=>'javascript:;',:class=>feed.fav_by?(current_user) ? 'on':'off'}
        .t.t1 关注
        .t.t2 取消关注

      .split.quiet •
      %a.transmit{:href=>'javascript:;',:'data-colunt'=>feed.quotes_count} 传播

      .split.quiet •
      -if feed.comments_count == 0
        %a.echo{:href=>'javascript:;',:'data-count'=>feed.comments_count} 评论
      -else
        %a.echo{:href=>'javascript:;',:'data-count'=>feed.comments_count} #{feed.comments_count}条评论

      -if feed.creator == current_user
        .split.quiet •
        %a.del{:href=>'javascript:;'} 删除

  -else
    .ops
      .split.quiet •
      -if feed.comments_count == 0
        %a.echo{:href=>'javascript:;',:'data-count'=>feed.comments_count} 评论
      -else
        %a.echo{:href=>'javascript:;',:'data-count'=>feed.comments_count} #{feed.comments_count}条评论
