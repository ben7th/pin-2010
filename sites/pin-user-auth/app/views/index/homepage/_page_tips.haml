-vote_tips = UserViewpointVoteUpTipProxy.new(current_user).tips
-if !vote_tips.blank?
  .homepage-new-voteup-tip
    .title> 投票通知
    .tips
      -vote_tips.each do |vote_tip|
        .tip{:'data-id'=>vote_tip.id}
          .delete
          .data=vote_up_tip_str(vote_tip)
    .btns
      =minibutton '清除所有','javascript:;',:class=>'clear-all'

-viewpoint_tips = UserAddViewpointTipProxy.new(current_user).tips
-if !viewpoint_tips.blank?
  .homepage-new-viewpoint-tip
    .title> 观点通知
    .tips
      -viewpoint_tips.each do |viewpoint_tip|
        .tip{:'data-id'=>viewpoint_tip.id}
          .delete
          .data=viewpoint_tip_str(viewpoint_tip)
    .btns
      =minibutton '清除所有','javascript:;',:class=>'clear-all'