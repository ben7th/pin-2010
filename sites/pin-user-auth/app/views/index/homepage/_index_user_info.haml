.index-user-info
  .base
    .avatar
      =avatar(current_user,'medium')
    .meta
      .name=current_user.name
      .regtime
        注册时间
        =qdate current_user.created_at
  .scount.keng
    %dl
      %dt=link_to @mindmaps_count,pin_url_for('pin-mindmap-editor',"users/#{current_user.id}")
      %dd 思维导图
    %dl
      %dt=link_to @fans_count,pin_url_for('pin-user-auth',"#{current_user.id}/fans")
      %dd 关注者
  .follows
    .count
      %span> 关注 #{@followings_count} 人，
      =link_to '查看全部',pin_url_for('pin-user-auth',"#{current_user.id}/followings")
    .avatars
      -@followings.each do |user|
        -link_to "/users/#{user.id}",:title=>user.name do
          =avatar(user,:tiny)