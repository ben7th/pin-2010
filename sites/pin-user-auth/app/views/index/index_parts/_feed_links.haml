-if logged_in?
  .module-links.feeds
    .link.home.btb
      .icon
      =tabs_link_to '我的首页',pin_url_for('pin-user-auth','/feeds')
    .link.favs.btb
      .icon
      =tabs_link_to '关注的主题',pin_url_for('pin-user-auth','/favs')
    .link.answered-feeds.btb
      .icon
      =tabs_link_to '参与过的主题',pin_url_for('pin-user-auth','/feeds/memoed')

    .link.recommend.btb
      .icon
      =tabs_link_to '推荐给我的主题',pin_url_for('pin-user-auth','feeds/recommend')
    .link.be-asked-feeds.btb
      .icon
      -invite_count = current_user.feed_invites.count
      =tabs_link_to '收到的邀请',pin_url_for('pin-user-auth','/feeds/be_invited')
      -if invite_count > 0
        .count=invite_count

    .link.be-hidden-feeds
      .icon
      =tabs_link_to '被隐藏的主题',pin_url_for('pin-user-auth','/feeds/mine_hidden')

    .link.atmes.hide
      .icon
      =tabs_link_to '提到我的',pin_url_for('pin-user-auth','/atmes')

.module-links.feeds
  .link.recent-userlogs.btb
    .icon
    =tabs_link_to '大家最近的动态',pin_url_for('pin-user-auth','/feeds/userlogs')
  .link.recent-hot-feeds
    .icon
    =tabs_link_to '浏览最新主题',pin_url_for('pin-user-auth','/feeds/all')