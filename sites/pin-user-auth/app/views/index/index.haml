-require_css 'views/users',true

-content_for :javascripts do
  = javascript_include_tag "views/mindmap_image"
  = javascript_include_tag "views/index"
  = javascript_include_tag "views/index_channel_panel"
  = javascript_include_tag "views/feed_operation"

.grid_3.alpha
  =render :partial=>'index/index_parts/user_info',:locals=>{:user=>current_user}

.grid_14.paddingl20
  =render :partial=>'index/homepage/feeds/feed_form'
  =render :partial=>'index/homepage/index_channel_panel'

  .newsfeed
    =render :partial=>'index/homepage/feeds/new_feeds',:locals=>{:newsfeeds=>@feeds}

  .feed-paginate.padding5
