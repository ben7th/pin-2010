.footmisc
  .ops
    -if logged_in?
      -klass = feed.fav_by?(current_user) ? 'on':'off'
      -link_to 'javascript:;',:class=>"fav #{klass}" do
        %span.t1> 关注
        %span.t2> 取消关注

      .split.quiet> -
      =link_to '传播','javascript:;',:class=>'transmit',:'data-colunt'=>feed.quotes_count

      .split.quiet> -
      =link_to '评论','javascript:;',:class=>'echo'
    -else
      =link_to '评论','javascript:;',:class=>'echo'

  .creator.feed-creator
    .time
      创建于 #{created_from(feed)}
    .data
      .avatar
        =avatar feed.creator,:tiny
      .name
        =usersign(feed.creator)

  -if !feed.last_edited_user.blank?
    .last-edited-user.feed-editor
      -leu = feed.last_edited_user
      .time
        修改于 #{jtime feed.last_edited_time}
      .data
        .avatar
          =avatar leu,:tiny
        .name
          =usersign(leu)