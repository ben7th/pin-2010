.footmisc
  .time
    =created_from(feed)

  .ops
    -if logged_in?
      .split.quiet> -
      -klass = feed.fav_by?(current_user) ? 'on':'off'
      -link_to 'javascript:;',:class=>"fav #{klass}" do
        %span.t1> 关注
        %span.t2> 取消关注

      .split.quiet> -
      =link_to '传播','javascript:;',:class=>'transmit',:'data-colunt'=>feed.quotes_count

      .split.quiet> -
      =link_to '评论','javascript:;',:class=>'echo'

      -if feed.creator == current_user
        .split.quiet> -
        =link_to '删除','javascript:;',:class=>'del'
    -else
      .split.quiet> -
      =link_to '评论','javascript:;',:class=>'echo'

  .creator
    .avatar
      =avatar feed.creator,:tiny
    .name
      =usersign(feed.creator)