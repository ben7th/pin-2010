-#use 主题的观点
-#see 主题show页

-user = post.user

.viewpoint{:'data-id'=>post.id,:'data-vote-score'=>post.vote_score}
  -if logged_in? && user != current_user
    .vote-ops
      -if !post.voted_up_by?(current_user)
        .vote-up{:tipr=>'投赞成票，观点排序将上升'}
      -else
        .voted-up{:tipr=>'你已经投过赞成票了，再点一次取消投票'}

      .vote-score=post.vote_score

      -if !post.voted_down_by?(current_user)
        .vote-down{:tipr=>'投反对票（不记名），观点排序将下降'}
      -else
        .voted-down{:tipr=>'你已经投过反对票了，再点一次取消投票'}
  -else
    .vote-ops
      .vote-score.show=post.vote_score

  .main
    .content>
      =viewpoint_memo_format_show(post)

    -if !post.post_votes.blank?
      .supporters.quiet
        -if !post.post_up_votes.blank?
          =support_str(post)
        -if !post.post_down_votes.blank?
          =unsupport_str(post)

  .footmisc
    .creator
      .time.quiet
        发表于 #{jtime post.created_at}
      .data
        .avatar
          =avatar user,:tiny
        .name
          =usersign(user,true,18)

    -if post.updated_at != post.created_at
      .last-edited-user
        .time.quiet
          编辑于 #{jtime post.updated_at}
          -link_to "/post/#{post.id}/revisions" do
            查看历史

    .ops
      -if logged_in? && user == current_user
        .edit-vp
          -link_to 'javascript:;',:class=>'edit csshov' do
            .icon
            %span 修改观点

      -if logged_in?
        -if params[:dev]
          .split.quiet> -
          =link_to '派生新主题','javascript:;',:class=>'new-feed'

  -comments = post.comments
  -if !comments.blank?
    =render 'feeds/show_parts/comments',:comments=>comments

  -if logged_in?
    .add-comment
      =link_to '<div class="icon"></div><span>增加评论</span>','javascript:;',:class=>'echo csshov'