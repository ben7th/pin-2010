  =javascript_include_tag '/uploadify/upload_feed_photo'

  -# 编辑器核心代码
  =javascript_include_tag '/ueditor/editor_config.js'

  =javascript_include_tag '/ueditor/editor.js'
  =javascript_include_tag '/ueditor/core/browser.js'
  =javascript_include_tag '/ueditor/core/utils.js'
  =javascript_include_tag '/ueditor/core/EventBase.js'

  =javascript_include_tag '/ueditor/core/dom/dom.js'
  =javascript_include_tag '/ueditor/core/dom/dtd.js'
  =javascript_include_tag '/ueditor/core/dom/domUtils.js'
  =javascript_include_tag '/ueditor/core/dom/Range.js'
  =javascript_include_tag '/ueditor/core/dom/Selection.js'

  =javascript_include_tag '/ueditor/core/Editor.js'

  -# 编辑器命令代码

  -# 加粗，加斜，删除线，上标，下标
  =javascript_include_tag '/ueditor/commands/basestyle.js'
  =javascript_include_tag '/ueditor/commands/font.js'
  =javascript_include_tag '/ueditor/commands/elementpath.js'
  -# 引用块
  =javascript_include_tag '/ueditor/commands/blockquote.js'
  -# 有序列表
  =javascript_include_tag '/ueditor/commands/list.js'

  -# 编辑器插件
