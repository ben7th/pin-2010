-#use 主题列表项
-#see 登录后的首页->中间栏的主题列表

.feed{:'data-id'=>"#{feed.id}"}
  .lside
    .avatar
      =avatar feed.creator,:tiny
  .f
    =render 'feeds/info_parts/info_current_feed',:feed=>feed

    .tags.hide
      -feed.tags.each do |tag|
        =tag_label(tag)

    .footmisc
      .ops
        .o=link_to '评论','javascript:;',:class=>'add-comment'

    .status
      -comments_count = feed.comments.count
      .comments.page-comments-list{:style=>(comments_count>0) ? '':'display:none'}
        =render 'feeds/lists/comments',:comments=>feed.comments