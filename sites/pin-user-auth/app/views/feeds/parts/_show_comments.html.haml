-feed_id = feed.id
-feed_creator = feed.creator

.page-feed-show-comments
  .c-box
    .c-top
      评论 @mindpin

    -if logged_in?
      .comment-form{:'data-feed-id'=>feed_id}
        %textarea.comment-ipter.text
        .cfops
          .fright
            %span.submit-info
            %a.minibutton.commit{:href=>"javascript:;"} <span>评论</span>

  .comments
    -if comments.blank?
      .comment.blank 现在还没有评论
    -comments.each do |comment|
      -user = comment.user
      -created_at = comment.created_at
      -can_be_delete = logged_in? && [feed_creator, user].include?(current_user)

      -if user == feed_creator
        .comment.of_creator{:'data-id'=>comment.id,:'data-user-name'=>user.name}
          .avatar
            =avatar user,:tiny
          .data
            .name.quiet
              =usersign user
            .text
              =h comment.content
              %span.quiet (#{jtime created_at})
          .ops
            -if can_be_delete
              =link_to '删除','javascript:;',:class=>'delete'
              %span.quiet -
            =link_to '回复','javascript:;',:class=>'reply'
      -else
        .comment{:'data-id'=>comment.id,:'data-user-name'=>user.name}
          .avatar
            =avatar user,:tiny
          .data
            .name.quiet
              =usersign user
            .text
              =h comment.content
              %span.quiet (#{jtime created_at})
          .ops
            -if can_be_delete
              =link_to '删除','javascript:;',:class=>'delete'
              %span.quiet -
            =link_to '回复','javascript:;',:class=>'reply'