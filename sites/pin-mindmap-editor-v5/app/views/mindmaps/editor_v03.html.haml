-content_for :title, " 编辑器 v0.35 - #{escape_title(@mindmap)}"

= stylesheet_link_tag '/stylesheets/mindmap_mouse_right_menu'
= stylesheet_link_tag '/javascripts/pie/mindmap/css/mindmap_editor_page'
= stylesheet_link_tag '/javascripts/pie/mindmap/css/mindmap_canvas'

= javascript_include_tag 'pie/mindmap/pie_dragdrop'
= javascript_include_tag 'pie/mindmap/pie_mindmap_node_dragdrop'
= javascript_include_tag 'pie/mindmap/pie_map_menu'
= javascript_include_tag 'pie/mindmap/pie_mindmap_node_editor'
= javascript_include_tag 'pie/mindmap/pie_opfactory'
= javascript_include_tag 'pie/mindmap/pie_mindmap_node'
= javascript_include_tag 'pie/mindmap/pie_mindmap_json_loader'
= javascript_include_tag 'pie/mindmap/pie_mindmap_canvas_draw_module'
= javascript_include_tag 'pie/mindmap/pie_mindmap'

= javascript_include_tag 'nicedit/nicEdit'
= javascript_include_tag 'excanvas/excanvas.compiled'
= javascript_include_tag 'views/mindmap_page_load'

= javascript_include_tag '/javascripts/lightview/js/lightview.js'
= stylesheet_link_tag '/javascripts/lightview/css/lightview.css'

:javascript
  pie.load(function(){
    pie.MindmapPageLoader.load_editor_page('#{@mindmap.id}');
  });

#mindmap-toolbar
  .map-logo
    =logo @mindmap
  .map-title
    =escape_title(@mindmap,10)
  .map-creator
    =link_to @mindmap.user.name,pin_url_for('pin-mindmap-editor',"/users/#{@mindmap.user.id}/mindmaps"),:target=>'_blank'
  .map-timestamp
    %span 创建于
    %span.loud=created_at @mindmap
  .map-edit
    - if has_edit_rights?(@mindmap,current_user)
      =minibutton_remote "修改属性",:url=>paramsedit_mindmap_path(@mindmap),:method=>:get
  
#mindmap-main
  #mindmap-sidebar
    =render :partial=>'mindmaps/edit/editor_sidebar'

  #mindmap-resizer
    #mindmap-scroller
      #mindmap-canvas

#mindmap-status-bar
  .cooperate
    %span 共同编辑者
    -@mindmap.cooperate_editors.each do |editor|
      %span{:id=>"editor_#{editor.id}"}
        =link_to editor.name,"/users/#{editor.id}/mindmaps",:target=>'_blank'
  .net_condition
    %span 响应时间
    %span.last_respond
      %span.time_label 上次:
      %span.time 0
    %span.average_respond
      %span.time_label 平均:
      %span.time 0

=render :partial=>'mindmaps/edit/imgselector'