- require_css 'mindmaps.css'
- map_data = @mapdata

.marginb3em.clearfix
  .map_list_head
    .fleft.marginr20
      %h3
        #{map_data[:sub_title]}(#{map_data[:map_count]})
    .fleft
      .finder-sortby
        排序按
        =link_to "创建时间",finder_url('sortby','CREATED_TIME')
        =link_to "编辑时间",finder_url('sortby','UPDATED_TIME')
  .map_data
    =render :partial=>map_data[:partial]

  .paginate-bottom.clearfix
    = will_paginate @mindmaps