- mapid = mindmap.id

- mindpin_form_for(mindmap,:html =>{:id=>"edit_mindmap_form_#{mapid}",:target=>"upload_frame",:multipart => true,:class=>"common_form"}) do |f|
  = f.text_field :title
  = hidden_field_tag :fbox,"true"
  .hide
    .clearfix
      .fleft.marginr10
        =logo @mindmap
      .fleft
        %span{:class=>"desc"} (32 x 32 像素)
    = f.file_field :logo,:size=>20
  .field
    = f.check_box(:private)
    %span 设置这个导图为私有
  .form_actions
    =f.submit "保存"