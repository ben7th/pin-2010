-accordion_bar :bgc=>"#0B6138",:active_bgc=>"#E0542F" do
  -accordion_item '数据导出',:bgc=>"#ADC96D",:open=>false do
    .mindmap-export.padding5
      =render :partial=>'mindmaps/edit/export'
  -accordion_item '备注编辑',:bgc=>"#C1D791",:open=>false do
    .note_editor.padding5
      .editor_box
        %textarea#mindmap-note-edit{:style=>''}
  -accordion_item '相关导图',:bgc=>"#98BC48",:open=>false do
    .padding5
      -if @mindmap.rank.to_i != 0
        =render :partial=>"mindmaps/parts/relative_mindmaps",:locals=>{:mindmap=>@mindmap}
  -accordion_item '快速聊天',:bgc=>"#98BC48",:open=>true do
    .padding5
      .chat-box
        .chat-list
          .chat-start 对话开始..
        .chat-form
          %form{:onsubmit=>"new pie.MindmapUser('#{current_user.name}','#{@mindmap.id}').say($('chat-inputer').value);return false;"}
            .field
              %label
                #{current_user.name}说:
              =text_field_tag 'chat-inputer','',:class=>'text'
