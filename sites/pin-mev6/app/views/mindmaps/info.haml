-content_for :title do
  概要 - #{@mindmap.title}

-content_for :javascripts do
  = javascript_include_tag "pages/mindmap_choose_cooperator"

.mside.grid_5
  .map-meta
    =render 'mindmaps/info_parts/coop',:mindmap=>@mindmap

    .export
      %h3 数据导出
      =render :partial=>"mindmaps/parts/export",:locals=>{:mindmap=>@mindmap}

    .similar-maps
      %h3 内容相关导图
      =render :partial=>'mindmaps/parts/similar_mindmaps'

.main.grid_19.ll
  -mindmap_user = @mindmap.user

  .page-mindmaps-info-bar
    -link_to mindmap_user do
      .avatar
        =avatar(mindmap_user)
    .data
      .name=usersign mindmap_user,false
      .sign=h(truncate_u(mindmap_user.sign,16))

    .explore
      -prev_mindmap = @mindmap.prev(current_user)
      -next_mindmap = @mindmap.next(current_user)
      .btns
        -if !!prev_mindmap
          .prev{:tip=>'查看上一个导图'}
            =link_to "上一个",info_mindmap_path(prev_mindmap)
        -else
          .prev.disabled
            =link_to "上一个",'javascript:;'
        .show{:tip=>'在编辑器中详细查看'}
          =link_to '<span>详细查看</span>',"/mindmaps/#{@mindmap.id}",:target=>'_blank'
        -if !!next_mindmap
          .next{:tip=>'查看下一个导图'}
            =link_to "下一个",info_mindmap_path(next_mindmap)
        -else
          .next.disabled
            =link_to "下一个",'javascript:;'

  .page-mindmap-info-view
    =render 'mindmaps/lists/management',:mindmaps=>[@mindmap]