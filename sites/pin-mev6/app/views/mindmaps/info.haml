-content_for :title do
  概要 - #{@mindmap.title}

-content_for :javascripts do
  = javascript_include_tag "pages/mindmap_choose_cooperator"
  :javascript
    pie.load(function(){
      jQuery('.page-mindmap-others .share-full-img').live('click',function(){
        var elm = jQuery(this).hide();
        jQuery('.share-full-img-content').hide();

        jQuery('.page-mindmap-others .aj-loading').show();
        var content = jQuery('.share-full-img-content textarea').val();
        jQuery.ajax({
          url:'/mindmaps/'+elm.attr('data-id')+'/share_original',
          type:'PUT',
          data:'content='+encodeURIComponent(content),
          success:function(){
            jQuery('.page-mindmap-others .aj-loading').hide();
            jQuery('.page-mindmap-others .do-share').show();
          },
          error:function(){
            
          }
        })
      })
    })

.mside.grid_5
  .map-meta
    =render 'mindmaps/info_parts/coop',:mindmap=>@mindmap

    .export
      %h3 数据导出
      =render :partial=>"mindmaps/parts/export",:locals=>{:mindmap=>@mindmap}

    .similar-maps
      %h3 内容相关导图
      =render :partial=>'mindmaps/parts/similar_mindmaps'

.main.grid_19.ll
  -mindmap_user = @mindmap.user

  .page-mindmaps-info-bar
    -link_to mindmap_user do
      .avatar
        =avatar(mindmap_user)
    .data
      .name=usersign mindmap_user,false
      .sign=h(truncate_u(mindmap_user.sign,16))

    .explore
      .btns
        .show{:tip=>'在编辑器中详细查看'}
          =link_to '<span>详细查看</span>',"/mindmaps/#{@mindmap.id}",:target=>'_blank'

  .page-mindmap-info-view
    =render 'mindmaps/list/list',:mindmaps=>[@mindmap]

  -if logged_in? && current_user.has_binded_sina?
    .page-mindmap-others{:style=>'margin:0 20px 10px 20px;'}
      =minibutton '(beta)分享大图到新浪微博','javascript:;',:class=>'share-full-img',:'data-id'=>@mindmap.id
      .share-full-img-content{:style=>'margin:5px 0 0 0;'}
        =text_area_tag 'content',"分享mindpin的思维导图：#{@mindmap.title}。点击查看大图，看完整图片。网站链接：#{pin_url_for('pin-daotu',"/mindmaps/#{@mindmap.id}")}",:class=>'text'
      .aj-loading.quiet{:style=>'padding-left:22px;background-position:0 8px;display:none;height:23px;line-height:23px;'} 正在向微博传输数据..请稍候

      -page_url = pin_url_for('pin-daotu',"/mindmaps/#{@mindmap.id}/info")
      -page_title = "分享mindpin的思维导图：#{@mindmap.title}。点击查看大图，看完整图片。"
      -newest_pic_url = pin_url_for("pin-mindmap-image-cache","#{@mindmap.id}.1.png?#{@mindmap.updated_at.to_i}")
      -win_url = "http://service.weibo.com/share/share.php?url=#{page_url}&appkey=1526151944&title=#{page_title}&pic=#{newest_pic_url}&ralateUid="
      .do-share{:style=>'display:none;'} 分享完毕