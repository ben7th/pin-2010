- @mindpin_layout.theme = '2011'
- @mindpin_layout.grid = 24
- @mindpin_layout.yield_partial = 'application'

!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %meta{"http-equiv"=>"content-type",:content=>"text/html;charset=UTF-8"}
    %meta{"http-equiv"=>"X-UA-Compatible",:content=>"chrome=1"}
    %meta{"http-equiv"=>"X-UA-Compatible",:content=>"IE=EmulateIE7"}
    %meta{:content=>"这里是一个大家提出问题和想法，互相帮助其他人解答和完善的地方。",:name=>"description"}

    -tstring = ((yield :title) || '').gsub("\n",'')
    %title="#{tstring} MindTu在线思维导图"

    =render 'layouts/parts/css'

  %body.echo
    .page-wrap
      .page-container
        =render 'layouts/parts/nav'
        .page-content{:class=>container_classname}
          .cell.clearfix
            =yield

    =render 'layouts/parts/footer'

    #page-hide.hide
      =yield :hide
      %iframe{:name=>"upload_frame",:style=>"width:1px;height:1px;border:0px;",:src=>"about:blank"}

    =render 'layouts/parts/javascripts'