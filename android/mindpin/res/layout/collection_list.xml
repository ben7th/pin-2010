<?xml version="1.0" encoding="utf-8"?>

<!-- 收集册列表界面 -->

<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/body"
>	
	<RelativeLayout
		android:id="@+id/head_bar"
		style="@style/head_bar"
	>
		<Button 
			style="@style/head_bar_button_go_back"
		/>
		<TextView 
			style="@style/head_bar_text_center" 
			android:text="@string/main_bn_collections"
		/>
	    <Button
	    	android:id="@+id/toggle_list_mode"
			android:text="编辑"
			style="@style/head_bar_button_right"
	    />
	</RelativeLayout>
	
	<ListView 
		android:id="@+id/collection_list"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@+id/head_bar"
		android:layout_above="@+id/bottom_bar"
	/>

   	<LinearLayout 
  		android:id="@+id/bottom_bar"
		style="@style/bottom_bar"
		android:layout_alignParentBottom="true"
	>
		<LinearLayout
			style="@style/bottom_bar_top_line"
		/>
		<Button
			android:id="@+id/new_collection"
			android:text="@string/new_collection"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
		/>
	</LinearLayout>
</RelativeLayout>
