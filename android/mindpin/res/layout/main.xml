<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/body"
>
	<LinearLayout
		style="@style/title_bar"
	>
		<ImageView
			android:id="@+id/account_logo"
			style="@style/title_bar_user_avatar"
		/>
		<TextView
			android:id="@+id/account_name"
			style="@style/title_bar_text"
		/>
	</LinearLayout>
	
	<TableLayout
		style="@style/main"
	android:weightSum="1">
		<TableRow>
			<LinearLayout
				style="@style/main_layout_table_item"
			>
				<LinearLayout
					android:id="@+id/main_bn_new_feed"
					android:background="@drawable/main_new_feed_button_background" 
					style="@style/main_layout_table_item_image"
				/>
				<TextView
					android:text="@string/main_bn_new_feed"
					style="@style/main_layout_table_item_text"
				/>
			</LinearLayout>
			
			<LinearLayout
				style="@style/main_layout_table_item"
			>
				<LinearLayout 
					android:id="@+id/main_bn_camera"
					android:background="@drawable/main_camera_button_background"
					style="@style/main_layout_table_item_image"
				/>
				<TextView
					android:text="@string/main_bn_camera"
					style="@style/main_layout_table_item_text"
				/>
			</LinearLayout>
		</TableRow>
		
		<TableRow android:weightSum="2">
			<LinearLayout
				style="@style/main_layout_table_item"
			>
				<LinearLayout
					android:id="@+id/main_bn_feeds"
					android:background="@drawable/main_feed_button_background"
					style="@style/main_layout_table_item_image"
				/>
				<TextView
					android:text="@string/main_bn_feeds"
					style="@style/main_layout_table_item_text"
				/>
			</LinearLayout>
			
			<LinearLayout
				style="@style/main_layout_table_item"
			>
				<LinearLayout
					android:id="@+id/main_bn_collections"
					android:background="@drawable/main_collection_button_background" 
					style="@style/main_layout_table_item_image"
				/>
				<TextView
					android:text="@string/main_bn_collections"
					style="@style/main_layout_table_item_text"
				/>
			</LinearLayout>
		</TableRow>
		<ProgressBar 
			android:id="@+id/main_notice_bar" 
			style="?android:attr/progressBarStyleHorizontal"
			android:visibility="gone"
			android:layout_height="5dip" 
			android:layout_width="50dip">
		</ProgressBar>
		<TextView 
			android:layout_height="wrap_content" 
			android:id="@+id/main_notice" 
			android:layout_width="fill_parent" 
			android:gravity="center">
		</TextView>
	</TableLayout>
</LinearLayout>
