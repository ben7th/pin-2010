<?xml version="1.0" encoding="utf-8"?>

<!-- 主题列表项 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/feed_list_item"
    android:orientation="vertical"
>
	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="50dp"
	>
	
		<ImageView 
			android:id="@+id/user_avatar"
			style="@style/feed_list_item_avatar"
			android:src="@drawable/user_default_avatar_normal"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
		/>
		<TextView 
			android:id="@+id/user_name" 
			style="@style/feed_list_item_name"
			android:text="某某某"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/user_avatar"
			android:gravity="bottom"
		/>
		<TextView 
			android:id="@+id/updated_at"
		    style="@style/feed_list_item_created_at" 
		    android:layout_alignParentBottom="true"
		    android:layout_toRightOf="@+id/user_avatar"
		    android:text="2011年11月11日 11:11:11"
		    android:gravity="top"
		/>
	</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:padding="9dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<TextView   
		    android:id="@+id/feed_id"
		    style="@style/feed_list_item_text"
		    android:visibility="gone"
	    />
	
		<TextView   
		    android:id="@+id/feed_title"
		    style="@style/feed_list_item_title"
		    android:text="某某某"
	    />
		<TextView   
		    android:id="@+id/feed_detail"
		    style="@style/feed_list_item_text"
		    android:text="某某某"
	    />
    </LinearLayout>

</LinearLayout>