<?xml version="1.0" encoding="utf-8"?>

<!-- 主题列表项 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/feed_list_item"
>

	<include 
		layout="@layout/part_feed_list_userinfo"
	/>

	<LinearLayout
		android:orientation="vertical"
		style="@style/feed_list_content"
	>
	
		<TextView   
		    android:id="@+id/feed_title"
		    style="@style/feed_list_item_title"
	    />
	    
	    <LinearLayout 
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    >
			<ImageView
				android:id="@+id/feed_photo"
				android:layout_width="84dp"   
		    	android:layout_height="84dp"
		    	android:layout_marginRight="4dp"
		    	android:src="@drawable/img_loading"
			/>
	
			<TextView   
			    android:id="@+id/feed_detail"
			    style="@style/feed_list_item_text"
		    />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>