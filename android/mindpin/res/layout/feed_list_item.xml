<?xml version="1.0" encoding="utf-8"?>

<!-- 主题列表项 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/feed_list_item"
>

	<include 
		layout="@layout/part_feed_userinfo"
	/>

	
	<LinearLayout
		android:orientation="vertical"
		style="@style/feed_list_content"
	>
		<LinearLayout
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		>
			<ImageView 
				android:id="@+id/feed_photos_1st"
				android:layout_width="84dp"
				android:layout_height="84dp"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="9dp"
				android:background="@drawable/bg_image_loading"
				android:adjustViewBounds="true"
			/>
			<ImageView 
				android:id="@+id/feed_photos_2nd"
				android:layout_width="84dp"
				android:layout_height="84dp"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="9dp"
				android:background="@drawable/bg_image_loading"
				android:adjustViewBounds="true"
			/>
			<ImageView 
				android:id="@+id/feed_photos_3rd"
				android:layout_width="84dp"
				android:layout_height="84dp"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="9dp"
				android:background="@drawable/bg_image_loading"
				android:adjustViewBounds="true"
			/>
			<ImageView 
				android:id="@+id/feed_one_photo"
				android:layout_width="260dp"
				android:layout_height="160dp"
				android:layout_marginBottom="9dp"
				android:background="@drawable/bg_image_loading"
				android:adjustViewBounds="true"
			/>
			
		</LinearLayout>
		
		<TextView   
		    android:id="@+id/feed_title"
		    style="@style/feed_list_item_title"
	    />
	    
		<TextView   
		    android:id="@+id/feed_detail"
		    style="@style/feed_list_item_text"
	    />
	    
	</LinearLayout>
</LinearLayout>