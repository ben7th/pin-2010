<?xml version="1.0" encoding="utf-8"?>

<!-- 主题详细信息页 -->

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/body"
>
	<ScrollView
		android:id="@+id/feed_detail_scroll"
		android:scrollbars="vertical"
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
	>    
		<LinearLayout
			android:orientation="vertical"
	  		android:layout_width="fill_parent"
	  		android:layout_height="fill_parent"
	  		android:paddingBottom="9dp"
  		>
  			<!-- 作者信息 -->
		    <LinearLayout 
		    	android:layout_width="fill_parent"
		    	android:layout_height="50dp"
		    	android:background="#f4f4f4"
		    	android:padding="5dp"
		    	android:layout_marginTop="4dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_marginBottom="0dp"
		    >
				<ImageView
					android:id="@+id/creator_logo"
					android:layout_width="40dp"
		    		android:layout_height="40dp"
		    		android:layout_marginRight="5dp"
				/>
			    <TextView 
			    	android:id="@+id/creator_name"
			    	android:layout_width="wrap_content"
			    	android:layout_height="40dp"
			    	android:textSize="18dp"
			    	android:gravity="center"
			    />
			</LinearLayout>
			
			<!-- 图片 -->
			<LinearLayout
				android:orientation="vertical"
				android:id="@+id/feed_photos"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content" 
			>
				<com.mindpin.widget.MindpinImageSwitcher
					android:layout_gravity="center"
			    	android:id="@+id/feed_photos_image_switcher"
					android:layout_width="wrap_content"
	        		android:layout_height="350dip" 
					android:paddingTop="9dp" 
					android:paddingLeft="9dp" 
					android:paddingRight="9dp" 
					android:paddingBottom="0dp"			 
	        		/>
	        		<TextView
	        			android:id="@+id/feed_photos_footer"
	        			android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"		 
	        		/>
			</LinearLayout>
	    	<!-- 标题 -->
		    <TextView 
		    	android:id="@+id/feed_title"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textSize="20dp"
		    	android:paddingTop="9dp" 
		    	android:paddingLeft="9dp" 
		    	android:paddingRight="9dp" 
		    	android:paddingBottom="0dp"
		    />
		    <!-- 正文 -->
		    <TextView 
		    	android:id="@+id/feed_detail"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textSize="18dp"
		    	android:paddingTop="9dp" 
		    	android:paddingLeft="9dp" 
		    	android:paddingRight="9dp" 
		    	android:paddingBottom="0dp"
		    />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
