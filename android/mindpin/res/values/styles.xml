<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mindpin.default.theme" parent="@android:style/Theme.Light" >
     	<item name="android:windowNoTitle">true</item>
     	<item name="android:textColor">#000000</item>
    </style>
    
    <style name="body">
    	<item name="android:orientation">vertical</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:background">#FFFFFF</item>
    </style>
    
    <!-- title_bar -->
    <style name="title_bar">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">42dp</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:background">#444444</item>
    	<item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="title_bar_text">
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_gravity">center</item>
    	<item name="android:padding">5dp</item>
    </style>
    
    <style name="title_bar_user_avatar">
    	<item name="android:layout_width">32dp</item>
    	<item name="android:layout_height">32dp</item>
    	<item name="android:layout_margin">5dp</item>
    	<item name="android:layout_gravity">center</item>
    </style>
    
    <!-- main -->
    <style name="main">
    	<item name="android:orientation">vertical</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:padding">10dp</item>
    </style>
    
    <!-- misc -->
    <style name="text">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textSize">18dp</item>
    </style>
    
    <style name="mindpin_logo">
    	<item name="android:src">@drawable/mindpin_logo</item>
    	<item name="android:layout_width">290px</item>
    	<item name="android:layout_height">75px</item>
    	<item name="android:layout_margin">20dp</item>
    	<item name="android:layout_gravity">center</item>
    </style>
    
    <!-- loading_layout -->
    <style name="loading_layout_text">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:textSize">18dp</item>
    	<item name="android:gravity">center</item>
    </style>

    <style name="login_layout_mindpin_logo" parent="@style/mindpin_logo"></style>
    
    <style name="login_layout_inputer">
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_marginBottom">10dp</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/login_inputer_background</item>
   	</style>
   	
    <style name="login_layout_button" parent="@style/login_layout_inputer">
    	<item name="android:background">@drawable/login_button_background</item>
    	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	
   	<!-- main_layout -->
   	<style name="main_layout_table_item">
   		<item name="android:layout_weight">1</item>
   		<item name="android:padding">10dp</item>
   		<item name="android:layout_marginTop">10dp</item>
   		<item name="android:layout_marginBottom">10dp</item>
   		<item name="android:orientation">vertical</item>
   	</style>
   	
   	<style name="main_layout_table_item_image">
   		<item name="android:clickable">true</item>
   		<item name="android:layout_width">80px</item>
   		<item name="android:layout_height">80px</item>
   		<item name="android:layout_gravity">center</item>
   		<item name="android:layout_margin">8dp</item>
   	</style>
   	
   	<style name="main_layout_table_item_text">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
   		<item name="android:layout_gravity">center</item>
   		<item name="android:textSize">16dp</item>
   	</style>
   	
   	<!-- new_feed_layout -->
   	<style name="new_feed_layout_main" parent="@style/main">
   		<item name="android:padding">0dp</item>
   	</style>
    <style name="new_feed_layout_inputer">
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_marginBottom">10dp</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/login_inputer_background</item>
   	</style>
</resources>
