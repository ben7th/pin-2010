<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mindpin.default.theme" parent="@android:style/Theme.Light" >
     	<item name="android:windowNoTitle">true</item>
     	<item name="android:textColor">#000000</item>
    </style>
    
    <style name="body">
    	<item name="android:orientation">vertical</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:background">#F4F4F4</item>
    </style>
    
    <!-- title_bar -->
    <style name="title_bar">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">42dp</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:background">@drawable/title_bar_bg</item>
    </style>
    
    <style name="title_bar_text">
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_gravity">center</item>
    	<item name="android:layout_marginLeft">7dp</item>
    </style>
    
    <style name="title_bar_user_avatar">
    	<item name="android:layout_width">42dp</item>
    	<item name="android:layout_height">42dp</item>
    	<item name="android:layout_margin">0dp</item>
    	<item name="android:layout_gravity">center</item>
    </style>
    
    <!-- main -->
    <style name="main">
    	<item name="android:orientation">vertical</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:padding">10dp</item>
    </style>
    
    <!-- bottom_bar -->
    <style name="bottom_bar">
    	<item name="android:orientation">vertical</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">#f1f1f1</item>
    </style>
    <style name="bottom_bar_top_line">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">1dp</item>
    	<item name="android:background">#ccc</item>
   	</style>
    <style name="bottom_bar_button">
		<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">40dp</item>
    	<item name="android:textSize">15dp</item>
    	<item name="android:background">@drawable/bottom_bar_button_background</item>
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:layout_margin">2dp</item>
   	</style>
    
    
    <!-- misc -->
    <style name="text">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textSize">18dp</item>
    </style>
    
    <style name="mindpin_logo">
    	<item name="android:src">@drawable/mindpin_logo</item>
    	<item name="android:layout_width">290px</item>
    	<item name="android:layout_height">75px</item>
    	<item name="android:layout_margin">20dp</item>
    	<item name="android:layout_gravity">center</item>
    </style>
    
    <!-- loading_layout -->
    <style name="loading_layout_text">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:textSize">18dp</item>
    	<item name="android:gravity">center</item>
    </style>

    <style name="login_layout_mindpin_logo" parent="@style/mindpin_logo"></style>
    
    <style name="login_layout_inputer">
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_marginBottom">10dp</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/login_inputer_background</item>
   	</style>
   	
    <style name="login_layout_button" parent="@style/login_layout_inputer">
    	<item name="android:background">@drawable/login_button_background</item>
    	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	
   	<!-- main_layout -->
   	<style name="main_layout_table_item">
   		<item name="android:layout_weight">1</item>
   		<item name="android:padding">10dp</item>
   		<item name="android:layout_marginTop">10dp</item>
   		<item name="android:layout_marginBottom">10dp</item>
   		<item name="android:orientation">vertical</item>
   	</style>
   	
   	<style name="main_layout_table_item_image">
   		<item name="android:clickable">true</item>
   		<item name="android:layout_width">80px</item>
   		<item name="android:layout_height">80px</item>
   		<item name="android:layout_gravity">center</item>
   		<item name="android:layout_margin">8dp</item>
   	</style>
   	
   	<style name="main_layout_table_item_text">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
   		<item name="android:layout_gravity">center</item>
   		<item name="android:textSize">16dp</item>
   	</style>
   	
   	<!-- new_feed_layout -->
   	<style name="new_feed_layout_main" parent="@style/main">
   		<item name="android:padding">0dp</item>
   	</style>
    <style name="new_feed_layout_title_inputer">
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/inputer_new_feed_title_background</item>
   	</style>
   	
   	<!-- ## detial_inputer -->
    <style name="new_feed_layout_detail_inputer_container">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
   	</style>
    <style name="new_feed_layout_detail_inputer_top_line">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">1dp</item>
    	<item name="android:background">#ddd</item>
   	</style>
    <style name="new_feed_layout_detail_inputer">
    	<item name="android:textSize">18dp</item>
    	<item name="android:gravity">top</item>    	
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:background">@drawable/inputer_new_feed_detail_background</item>
   	</style>
   	
   	<!-- photo_shower -->
    <style name="new_feed_layout_photo_shower">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:gravity">left</item>
    	<item name="android:background">#f1f1f1</item>
   	</style>
    <style name="new_feed_layout_photo_shower_top_line_open">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">10dp</item>
    	<item name="android:background">@drawable/layout_new_feed_photo_shower_topline_background</item>
   	</style>
    <style name="new_feed_layout_photo_shower_top_line_close">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">0dp</item>
   	</style>
    <style name="new_feed_layout_photo_shower_image">
    	<item name="android:layout_width">48dp</item>
    	<item name="android:layout_height">48dp</item>
    	<item name="android:layout_marginTop">5dp</item>
    	<item name="android:layout_marginLeft">4dp</item>
    	<item name="android:layout_marginBottom">4dp</item>
    	<item name="android:padding">0dp</item>
   	</style>
   	
   	<!-- dialog -->
   	<style name="form_collection_dialog">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:background">#fff</item>
    	<item name="android:padding">5dp</item>
    	<item name="android:layout_margin">0dp</item>
   	</style>
   	<style name="form_collection_dialog_label">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textSize">14dp</item>
    	<item name="android:layout_marginBottom">5dp</item>
   	</style>
   	<style name="form_collection_dialog_inputer">
    	<item name="android:textSize">18dp</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/login_inputer_background</item>
   	</style>
   	
   	<!-- new_feed_bottom_bar -->   	
    <style name="new_feed_bottom_bar_button" parent="@style/login_layout_inputer">
    	<item name="android:background">@drawable/login_button_background</item>
    	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	
   	<style name="mindpin.alert_dialog" parent="@android:Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>
	
	<!-- mindpin自定义的 progress_dialog 用于 正在登录 等场合 -->
   	<style name="mindpin_progress_dialog" parent="android:style/Theme.Translucent">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item> <!-- 标题栏 -->
		<item name="android:windowIsFloating">true</item> <!-- 自身浮动 -->
		<item name="android:windowIsTranslucent">true</item> <!-- 自身半透明 -->	
		<item name="android:backgroundDimEnabled">false</item> <!-- 半透明的背景遮罩 -->
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/mindpin_process_dialog_background</item>
	</style>
</resources>
